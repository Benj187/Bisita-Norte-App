<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Acc">


    <ImageButton
        android:id="@+id/x_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exit"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/Textview"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Create Your Account"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="Arial Rounded MT"
        android:textColor="@color/black"
        android:layout_below="@+id/x_btn"
        android:textSize="19dp"
        android:letterSpacing="0.1"/>

    <ImageView
        android:id="@+id/etbox"
        android:layout_width="314dp"
        android:layout_height="204dp"
        android:layout_below="@+id/Textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/creatacc_box" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/createacc_line"
        android:hint="Username"
        android:letterSpacing="0.1"
        android:paddingLeft="15dp"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="@drawable/createacc_line"
        android:hint="Password"
        android:letterSpacing="0.1"
        android:paddingLeft="15dp"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/Country"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:background="@drawable/createacc_line"
        android:hint="Country"
        android:letterSpacing="0.1"
        android:paddingLeft="15dp"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/PhoneNum"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:background="@drawable/createacc_line"
        android:hint="Phone Number"
        android:letterSpacing="0.1"
        android:paddingLeft="15dp"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="@string/createacc"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etbox"
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        android:color="@color/black"
        android:textAlignment="center"
        android:letterSpacing="0.1"/>

    <Button
        android:id="@+id/createButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/textview1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/create_btn"
        android:letterSpacing="0.1"
        android:text="continue"
        android:textColor="@color/pink2" />
</RelativeLayout>