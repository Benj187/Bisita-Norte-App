<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/spot_border"
    android:layout_margin="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/spotimg"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:scaleX="1.1"
        android:src="@drawable/tangadanfalls"
        app:shapeAppearance="@style/roundedcorner" />

    <TextView
        android:id="@+id/spotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/spotimg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:letterSpacing=".09"
        android:text="Tangandan Falls"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/lct"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/spotName"
        android:layout_toRightOf="@+id/spotimg"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_location" />

    <TextView
        android:id="@+id/lctName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spotName"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/lct"
        android:text="San Gabriel, La Union"
        android:textColor="@color/red"
        android:textSize="15dp" />


</RelativeLayout>